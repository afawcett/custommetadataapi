<aura:component implements="flexipage:availableForAllPageTypes">

    <aura:attribute name="record" type="object" default="{}"/>

    <c:MetadataRecordData aura:id="recordData"
        recordFullName="LookupRollupSummary2.MyRecord2"
        targetRecord="{!v.record}"
        targetFields="DeveloperName, Label, ParentObject__c, ChildObject__c"
        />
        
    <aura:handler name="metadataRecordDataResult" event="c:MetadataRecordDataResult" action="{!c.handleSaveResult}"/>        
                
    <lightning:card >
        <p class="slds-p-horizontal--small">
            <lightning:input aura:id="recordField" name="fullName" label="Developer Name" value="{!v.record.DeveloperName}" required="true"/>
            <lightning:input aura:id="recordField" name="label" label="Label" value="{!v.record.Label}" required="true"/>
            <lightning:input aura:id="recordField" name="parentObject" label="Parent Object" value="{!v.record.ParentObject__c}"  required="true"/>
            <lightning:input aura:id="recordField" type="childObject" name="email" label="Child Object" value="{!v.record.ChildObject__c}"  required="true"/>
            <lightning:button aura:id="saveButton" label="Save" onclick="{!c.handleSave}" variant="brand" class="slds-m-top--medium"/>
        </p>
    </lightning:card>        
    	
</aura:component>